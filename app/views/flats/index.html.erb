<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Flats</h1>
  <div class="row d-flex justify-content-center">
    <div class="col-8">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @flats.each do |flat| %>
            <tr>
              <td><%= flat.name %></td>
              <td><%= flat.address %></td>
              <td><%= link_to 'Show', flat %></td>
              <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
              <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>

      <%= link_to 'New Flat', new_flat_path, class: "btn btn-primary btn-lg" %>
</div>

<%# mapbox's map %>
<div id="map"
  style="width: 100%; height: 600px;"
  <%# exposes api key to the public %>
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  <%# adds lat-lng to map %>
  <%# from controller: @markers = [ { lat: , lng: }, { lat: , lng: }, { lat: , lng: }... ] %>
  data-markers="<%= @markers.to_json %>"
  >
</div>
